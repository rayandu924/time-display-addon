{
  "metadata": {
    "name": "Time Display",
    "version": "1.0.0", 
    "description": "Ultra-simple responsive time display with configurable letter spacing and 12h/24h format",
    "author": "MyWallpaper",
    "icon": "⏰"
  },
  "settings": {
    "fontUrl": {
      "type": "url",
      "label": "Font URL",
      "description": "Google Fonts or custom font URL (leave empty for system font)",
      "default": "https://fonts.cdnfonts.com/css/anurati"
    },
    "fontFamily": {
      "type": "text",
      "label": "Font Family",
      "description": "Name of the font family to use",
      "default": "Anurati, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif"
    },
    "textColor": {
      "type": "color",
      "label": "Text Color",
      "description": "Color of the time text",
      "default": "#FFFFFF"
    },
    "language": {
      "type": "select",
      "label": "Language",
      "description": "Language for time formatting",
      "options": [
        { "value": "en-US", "label": "English" },
        { "value": "fr-FR", "label": "Français" },
        { "value": "es-ES", "label": "Español" },
        { "value": "de-DE", "label": "Deutsch" },
        { "value": "it-IT", "label": "Italiano" },
        { "value": "pt-PT", "label": "Português" },
        { "value": "ru-RU", "label": "Русский" },
        { "value": "ja-JP", "label": "日本語" },
        { "value": "zh-CN", "label": "中文" }
      ],
      "default": "en-US"
    },
    "letterSpacingPercent": {
      "type": "number",
      "label": "Letter Spacing (%)",
      "description": "Espacement entre les lettres en pourcentage de la taille de police",
      "default": 8,
      "min": 0,
      "max": 20,
      "step": 0.5
    },
    "timeFormat": {
      "type": "select",
      "label": "Time Format",
      "description": "Choose between 12-hour or 24-hour format",
      "options": [
        { "value": "24h", "label": "24 Hour (23:45)" },
        { "value": "12h", "label": "12 Hour (11:45 PM)" }
      ],
      "default": "24h"
    }
  }
}
